<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="repoDetailsActivity"
            type="com.example.gitbrowser.home.views.RepoDetailActivity" />
    </data>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:elevation="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backButton"
                android:onClick="@{() -> repoDetailsActivity.back()}"
                android:src="@drawable/ic_back_black"
                android:layout_gravity="start|center_vertical"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repoTitle"
                tools:text="Repository"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/sourcesanspro_bold"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="35dp"
                android:paddingVertical="18dp"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:id="@+id/image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="@{()->repoDetailsActivity.openGitRepo()}"
            android:textColor="#94C77D"
            android:id="@+id/link"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#000000"

            android:layout_marginTop="8dp"
            android:fontFamily="@font/sourcesanspro_bold"
            android:textSize="17dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"

            android:id="@+id/about_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/license"

            android:layout_marginTop="5dp"
            android:onClick="@{() -> repoDetailsActivity.openLicense()}"/>

       <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
           android:text="Contributors"
           android:layout_marginTop="10dp"
           android:textColor="#000000"
           android:fontFamily="@font/sourcesanspro_bold"
           android:textSize="17dp"
          android:id="@+id/contributor"/>

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="5dp"
           app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
           android:id="@+id/contributorRecycler"/>

        </LinearLayout>
    </ScrollView>


</layout>
