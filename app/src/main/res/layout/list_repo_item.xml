<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="repoHolder"
            type="com.example.gitbrowser.home.views.RepoAdapter.RepoHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="34dp"
        android:onClick="@{() -> repoHolder.openRepo()}"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/view"
            android:background="#E8E8F7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:id="@+id/thumbnailLayout"
            android:scaleType="centerCrop"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thumbnail"
                android:scaleType="centerCrop"
                android:src="@drawable/images"/>

        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/title"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_marginStart="5dp"
            android:lineSpacingMultiplier="1.3"
            tools:text=" ISIS Threat Against Kabu"
            app:layout_constraintStart_toEndOf="@id/thumbnailLayout"
            app:layout_constraintTop_toTopOf="@id/thumbnailLayout"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/language"
            android:layout_marginStart="5dp"
            tools:text="29-05-21"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toEndOf="@id/thumbnailLayout"
            />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/date"
            android:layout_marginStart="5dp"
            tools:text="29-05-21"
            android:textColor="#C1C0BC"
            app:layout_constraintTop_toBottomOf="@+id/language"
            app:layout_constraintStart_toEndOf="@id/thumbnailLayout"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"

            android:gravity="top"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/date"
            app:layout_constraintStart_toEndOf="@id/thumbnailLayout"

            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/star"
                android:text="Star"
                android:layout_marginEnd="10dp"
                android:paddingVertical="7dp"
                android:paddingHorizontal="35dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_star_border_purple500_black_18dp"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/fork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:paddingHorizontal="35dp"
                android:paddingVertical="7dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic__98858_repo_forked_icon"
                android:text="Fork"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
